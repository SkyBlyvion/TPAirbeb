{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Countryname</th>
                <th>Cityname</th>
                <th>Streetname</th>
                <th>Image_path</th>
                <th>Image_slug</th>
                <th>Prix</th>
                <th>Nombre_couchage</th>
                <th>Nombre_piece</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.countryname }}</td>
                <td>{{ annonce.cityname }}</td>
                <td>{{ annonce.streetname }}</td>
                <td>{{ annonce.imagePath }}</td>
                <td>{{ annonce.imageSlug }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.nombreCouchage }}</td>
                <td>{{ annonce.nombrePiece }}</td>
                <td>{{ annonce.taille }}</td>
                {# <td>{{ annonce.user.email }}</td> #}
                <td>
                    <a class="text-primary" href="{{ path('app_annonce_show', {'id': annonce.id}) }}">show</a>
                    <a class="text-primary" href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_annonce_new') }}">Create new</a>
{% endblock %}
