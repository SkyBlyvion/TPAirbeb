{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HasAnimal</th>
                <td>{{ reservation.hasAnimal ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index_user') }}" class="btn btn-primary ml-4 bg-primary">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary ml-4 bg-success">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
