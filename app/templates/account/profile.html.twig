
{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            
            <div class="col-9">
                <h1>Nom de compte: {{ user.name }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                    </div>
                {% endif %}
            </div>
        </div>


        <div class="mt-3"></div>

        {# {{ user.annonces | raw }} #}

        <hr>

        <h2>Les annonces de {{ user.name }}</h2>

        {% if user.annonces | length > 0 %}
            <div class="row ">
                {% for annonce in user.annonces %}
                    {% include('annonce/cards.html.twig') %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p><b>{{ user.name }} n'a pas encore d'annonces sur le site!</b></p>
            </div>
        {% endif %}
    </div>
{% endblock %}
